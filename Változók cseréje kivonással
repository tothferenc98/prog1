#include "std_lib_facilities.h"
int main() 
{
	int a,b;
	cout << "Írd be az első számot: " ;
 	cin >> a;
	cout << "Írd be az második számot: " ;
	cin >> b;
	cout << "\nEredeti ertekek:\na: " << a << "\nb: " << b << "\n";

	a = (a + b);
	b = (a - b);
	a = (a - b);
	cout << "\nForditas utan:\na: " << a << "\nb: " << b << '\n';
	
	return 0;
}
